// Размер окна для отображаемого ролика (h, w)
{
  "video_size": [336, 672],
  // Какую камеру открыть (0 — первая)
  "camera_index": 0,
  // RTSP/HTTP URL для внешней камеры (если пусто, используется camera_index)
  "camera_url": "",
  // Пауза после активного видео перед возвратом к idle (сек)
  "idle_delay_seconds": 5.0,
  // Кулдаун перед повторным запуском активного видео (сек)
  "trigger_cooldown_seconds": 3.0,
  // Сглаживание метрик (0..1), меньше - плавнее
  "smile_smooth_alpha": 0.1,
  // Путь к модели CNN улыбки
  "smile_cnn_model": "model.h5",
  // Путь к каскаду лиц для CNN
  "smile_cascade_path": "haarcascade_frontalface_default.xml",
  // Масштаб кадра для детекции CNN (0.5 = вдвое меньше)
  "cnn_detect_scale": 0.5,
  // Детектировать улыбку раз в N кадров
  "cnn_every_n": 2,
  // Улыбка должна держаться столько секунд до старта active видео
  "smile_hold_seconds": 0.5,
  // Задержка перед распознаванием улыбки после старта idle (сек)
  "idle_smile_delay": 2.0,
  // Кадры, на которых активное видео может стартовать (синхронизация)
  "trigger_sync_frames": [0, 150, 283, 395, 480, 649, 741, 817, 892, 1025, 1138, 1238],
  // Кадры, на которых активное видео может стартовать (синхронизация)
  "trigger_sync_frames": [0, 150, 283, 395, 480, 649, 741, 817, 892, 1025, 1138, 1238],
  // Масштаб встраиваемого превью камеры
  "camera_view_scale": 0.5,
  // Масштаб выводимого видео с камеры (меньше = меньше нагрузка)
  "camera_display_scale": 0.6,
  // Минимальная доля площади лица в кадре для учёта улыбки
  "min_face_area_ratio": 0.0000,
  // Пороги детекции/трекинга лица mediapipe
  "face_detection_confidence": 0.05,
  "face_tracking_confidence": 0.05,
  // Путь к модели landmarker
  "face_landmarker_model": "models/face_landmarker.task",
  "camera_capture_resolution": [1280, 720]
}
